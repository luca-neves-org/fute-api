datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

enum PlayerType {
  mensalist
  diarist
}

model Footy {
  id          String       @id @default(uuid())
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  email       String       @unique
  username    String       @unique
  name        String
  password    String
  location    String
  players     Player[]
  footy_event FootyEvent[]

  @@map("footy")
}

model FootyEvent {
  id               String             @id @default(uuid())
  created_at       DateTime           @default(now())
  updated_at       DateTime           @updatedAt
  footy_id         String
  Footy            Footy              @relation(fields: [footy_id], references: [id])
  PlayerFootyEvent PlayerFootyEvent[]

  @@map("footy_event")
}

model Team {
  id               String             @id @default(uuid())
  created_at       DateTime           @default(now())
  updated_at       DateTime           @updatedAt
  name             String
  victories        Int
  PlayerFootyEvent PlayerFootyEvent[]

  @@map("team")
}

model Player {
  id               String             @id @default(uuid())
  created_at       DateTime           @default(now())
  updated_at       DateTime           @updatedAt
  footy_id         String
  name             String
  starts           Int
  type             PlayerType
  PlayerFootyEvent PlayerFootyEvent[]
  Footy            Footy              @relation(fields: [footy_id], references: [id])

  @@map("player")
}

model PlayerFootyEvent {
  footy_event_id String
  player_id      String
  team_id        String
  goals          Int?
  assists        Int?
  Team           Team       @relation(fields: [team_id], references: [id])
  FootyEvent     FootyEvent @relation(fields: [footy_event_id], references: [id])
  Player         Player     @relation(fields: [player_id], references: [id])

  @@unique([footy_event_id, player_id])
  @@index([team_id], name: "idx_team_id")
  @@map("player_footy_event")
}
